//*** grid calculation
gridCalc(col = 0, gutter = 0, device = 'pc')
  if device == 'pc'
    $gridColPc * col + $gridGutterPc * gutter
  else if device == 'sp'
    $gridColSp * col + $gridGutterSp * gutter
  else
    0

//*** object fit
objFit(s = cover, pX = center, pY = center)
  width (cover == s) ? calc(100% + 2px) : 100%
  height (cover == s) ? calc(100% + 2px) : 100%
  margin-top (cover == s) ? -1px : 0
  margin-left (cover == s) ? -1px : 0
  object-fit s
  object-position pX pY
  font-family 'object-fit: ' + s + ';'

