//*** px
px(n)
  (n)px

//*** percentage
per(n, w = $dsSp)
  percentage((n / w))

//*** viewport width
vw(n, w = $dsSp)
  ((n / w) * 100)vw

//*** viewport height
vh(n, h)
  ((n / h) * 100)vh

//*** root em
rem(n, fbs = $fbs)
  (n / fbs) * 10rem

//*** project base root
prem(n)
  'calc(var(--project-base-root) * %s * 1px)' % n

//*** font settings
fontSettings(fs, lh = null, ls = null, fw = null, imp = null, bs = $dsSp)
  if imp != null
    font-size px(fs) !important
    if lh != null
      line-height lh !important
    if ls != null
      letter-spacing (ls / 1000)em !important
    if fw != null
      font-weight fw !important
  else
    font-size px(fs)
    if lh != null
      line-height lh
    if ls != null
      letter-spacing (ls / 1000)em
    if fw != null
      font-weight fw

