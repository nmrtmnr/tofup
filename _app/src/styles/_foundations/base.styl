//*** base settings
body
  color $black
  font-family $fontEn
  // font-feature-settings 'palt'

  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  -webkit-text-size-adjust 100%
  -webkit-tap-highlight-color rgba(0,0,0,0)

  *
    overflow-wrap break-word
    box-sizing border-box
    &::before
    &::after
      box-sizing border-box

  a
    display block
    color inherit
    text-decoration none

  a[href*='tel:']
    +pc()
      pointer-events none

  img
  svg
    pointer-events none
    user-drag none

  img
  picture
  svg
  video
    display block
    width 100%

  img
    height auto

  sup
    display inline-block
    top -.1em
    position relative
    font-size .7em
    vertical-align top
    margin-left rem(2)

  button
    background-color transparent
    border none
    cursor pointer
    outline none
    padding 0
    appearance none

//*** selection
// body
