//*** print
body
  +print()
    opacity 1 !important

body
  +print()
    @page
      margin-right 0
      margin-left 0
    width $dsPc * 1px
    // NOTE: 背景色の継承（chrome, FireFox用）
    -webkit-print-color-adjust exact
