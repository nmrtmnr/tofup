@import url('https://fonts.googleapis.com/css2?family=Unica+One&display=swap');

body.emoji
  background-color #111111
  font-family 'Unica One', cursive;

  .wrapper
      display flex
      flex-direction column

  .grid-container
      max-width 1600px
      width 100%
      margin 160px auto 0px auto
      display flex
      flex-wrap wrap
      justify-content center

  .image-container
      display grid
      grid-template-columns repeat(auto-fill, minmax(200px, 1fr))
      grid-gap 0px 0px

  .ascii-art-img
      width 100%
      height 100%
      object-fit contain

  .ascii-art-container
      display flex
      justify-content center
      align-items center
      flex-wrap wrap
      text-align center
      width 100%

  .ascii-art
      font-size 10px
      letter-spacing 0px
      line-height 0px
      position relative
      display inline-block
      text-align justify
      margin 0
      padding 20px 18px
      img
          display none
          position absolute
          top 0
          left 0
          width 100%
          height 100%
          object-fit contain
      span
          display inline-block
          width 8px
          height 10px
          text-align center

  .title_wrap
      position fixed
      padding 0
      margin 0
      width fit-content

  .title
      padding 0
      margin 0
      margin-left -12px
      font-size 150px
      line-height 100px
      text-align left
      color #AAA

  .subtitle
      padding 0
      margin 0
      margin-top 24px
      font-size 12px
      text-align left
      color #AAA
      line-height 12px

  .headline
      display block
      width 100%
      font-size 12px
      text-align left
      margin-top 10px
      color #666
