    if (color) {
      if (color.match(/^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$/)
          || color.match(/^rgba\(((\d|[1-9]\d|1\d\d|2[0-4]\d|25[0-5])\,\s?){3}(0|0?\.\d+|1|1\.0)\)$/)
          || cssColorName.includes(color)) {
